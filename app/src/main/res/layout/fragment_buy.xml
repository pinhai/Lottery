<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/Action_Bar_Text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="购彩大厅" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radio_buy_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/radio_all">
        <RadioButton
            android:id="@+id/radio_all"
            style="@style/Buy_Tab_Radio"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_nav_1_selector"/>
        <RadioButton
            android:id="@+id/radio_high"
            style="@style/Buy_Tab_Radio"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_nav_2_selector"/>
        <RadioButton
            android:id="@+id/radio_low"
            style="@style/Buy_Tab_Radio"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buy_nav_3_selector"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/frame_buy_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>