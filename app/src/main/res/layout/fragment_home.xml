<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/txt_login"
            style="@style/Home_Login_Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="登录" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/logo_cai33" />

        <TextView
            android:id="@+id/txt_register"
            style="@style/Home_Login_Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="注册" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_height="160dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />
            <com.forum.lottery.view.MarqueeText
                android:id="@+id/tv1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="5dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="@string/home_page_prompt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />
            <LinearLayout
                android:background="@color/white"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cqmoney"
                    android:text="存/取款"
                    android:textSize="18sp"
                    android:textColor="#308CE2"
                    android:drawableTop="@mipmap/cqk"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_betRecord"
                    android:text="投注记录"
                    android:textSize="18sp"
                    android:textColor="#FD7E16"
                    android:drawableTop="@mipmap/tzjl"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_youhui"
                    android:text="优惠活动"
                    android:textSize="18sp"
                    android:textColor="#D91D37"
                    android:drawableTop="@mipmap/yhhd"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="在线客服"
                    android:textSize="18sp"
                    android:textColor="#86C40E"
                    android:drawableTop="@mipmap/zxkf"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:drawableLeft="@mipmap/index_heng"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:background="@color/white"
                android:text="热门彩种"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <com.forum.lottery.view.MyGridView
                android:id="@+id/gv_lottery"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:drawableLeft="@mipmap/index_heng"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:text="最新中奖榜"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <!--android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"-->
            <ListView
                android:id="@+id/lv_winning"
                android:divider="@color/transparent"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>