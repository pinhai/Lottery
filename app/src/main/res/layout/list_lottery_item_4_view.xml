<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#ffbe00"
            android:textSize="16sp"
            android:text="安徽快三"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/tv_periods_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/text_color_2"
            android:layout_gravity="bottom"
            android:text="第20170302219期 2017-03-02 19:57:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@mipmap/kaijiang_kuaisan"
        android:paddingTop="5dp">
        <ImageView
            android:id="@+id/iv_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/touzi_01"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/touzi_02"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/touzi_06"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>